<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:background="@drawable/user4"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="#80000000"
        android:weightSum="6"
        tools:context=".activity.OpenStoryActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:paddingVertical="10dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="20dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#4DFFFFFF"
                    android:id="@+id/top_bar"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="5dp"
                            android:layout_height="30dp"
                            android:id="@+id/open_story_image"
                            android:src="@drawable/user4"
                            android:alpha="1.0"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginVertical="3dp"
                            android:layout_marginRight="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lakashi"
                            android:id="@+id/open_story_name"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="25dp"
                            android:src="@drawable/plus"
                            android:layout_gravity="right|center"
                            android:layout_weight="1"

                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    />
                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="Leave"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/my_button2"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_button"
                    android:elevation="0dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    >
                    <ImageView
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/diamont"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_button"
                    android:elevation="0dp"
                    android:layout_gravity="center"

                    >
                    <ImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/eye"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="16dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Guests"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp"
                            android:layout_marginBottom="5dp"
                            />
                        <Button
                            android:id="@+id/join"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:text="JOIN"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/my_button"
                            />


                    </LinearLayout>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/gift"
                        android:src="@drawable/gift"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#66FFFFFF"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="0dp"
                                android:padding="5dp"
                                android:layout_height="25dp"
                                android:src="@drawable/love"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="55"
                                android:textSize="18dp"
                                android:layout_weight="1"
                                android:textColor="@color/colorPrimary"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:src="@drawable/share2"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_edittext"
                        android:drawableLeft="@drawable/msg_icon"
                        android:drawablePadding="5dp"
                        android:hint="Type your message"
                        android:padding="5dp"
                        android:textColor="#80FFFFFF"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/emo1" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/emo2" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/emo3" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/emo4" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/emo5" />


                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </HorizontalScrollView>


    </LinearLayout>
    <include layout="@layout/bottom_navigation_join"/>
    <include layout="@layout/bottom_navigation_gift"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
