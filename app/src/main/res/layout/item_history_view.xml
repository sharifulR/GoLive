<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/historyViewModelIV"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/user1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/background_circular"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="@+id/historyViewModelIV"
        app:layout_constraintEnd_toEndOf="@+id/historyViewModelIV">

        <TextView
            android:id="@+id/user_level_gift_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenOp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="7" />
    </LinearLayout>

    <TextView
        android:id="@+id/historyUserNameModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/historyViewModelIV"
        app:layout_constraintEnd_toStartOf="@+id/historyDiamondModelBTN"
        app:layout_constraintStart_toEndOf="@+id/historyViewModelIV"
        app:layout_constraintTop_toTopOf="@+id/historyViewModelIV" />

    <Button
        android:id="@+id/historyDiamondModelBTN"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/background_gift_item"
        android:backgroundTint="@color/button"
        android:drawablePadding="@dimen/_5sdp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>